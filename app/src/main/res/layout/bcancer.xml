<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bcancer_background">

   <ScrollView
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:id="@+id/scrollView"
       android:layout_marginTop="200dp"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:layout_marginBottom="10dp">

       <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           android:orientation="vertical">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="18sp"
               android:textColor="#000000"
               android:id="@+id/textView"
               android:text="@string/wbc"/>

           <ImageView
               android:layout_width="match_parent"
               android:layout_height="240dp"
               android:id="@+id/imageView"
               android:layout_marginTop="10dp"
               android:layout_marginBottom="10dp"
               android:contentDescription="Normal Breast Tissue"
               android:src="@drawable/nb_background"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="18sp"
               android:textColor="#000000"
               android:id="@+id/textView2"
               android:text="@string/nb"/>

           <ImageView
               android:layout_width="match_parent"
               android:layout_height="240dp"
               android:id="@+id/imageView2"
               android:layout_marginTop="10dp"
               android:layout_marginBottom="10dp"
               android:contentDescription="Lymph Nodes in Relation to the Breast"
               android:layout_centerInParent="true"
               android:src="@drawable/ls_background"/>


           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="18sp"
               android:textColor="#000000"
               android:id="@+id/textView3"
               android:text="@string/othertext"/>


       </LinearLayout>

   </ScrollView>

</RelativeLayout>